<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    {{#if showNavbar}}
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Cardápio</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Buscar</button>
                    </form>
                </div>
                <div class="px-lg-5 py-md-2">
                    <button class="btn btn-outline-success"><a href="/carrinho"
                            class="text-decoration-none">Carrinho</a></button>
                </div>
            </div>
        </nav>
    {{/if}}
    
    {{#if currentStep}} <!-- Verifica se a variável currentStep está presente -->
    <div class="container py-3">
        <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0"
                aria-valuemax="100" id="progress-bar"></div>
        </div>
    </div>
    {{/if}}

    <!-- O restante do seu conteúdo -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <!-- Navbar -->
    </nav>

    {{{body}}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script>
        // Lógica para ajustar a barra de progresso
        const progressBar = document.getElementById('progress-bar');
        const currentStep = '{{currentStep}}'; // Passar a etapa atual do controller

        let progress = 0;
        switch (currentStep) {
            case 'comprar':
                progress = 25;
                break;
            case 'endereco':
                progress = 50;
                break;
            case 'pagamento':
                progress = 75;
                break;
            case 'confirmar':
                progress = 100;
                break;
        }

        progressBar.style.width = `${progress}%`;
        progressBar.setAttribute('aria-valuenow', progress);
        { { { body } } }
</body>

</html>